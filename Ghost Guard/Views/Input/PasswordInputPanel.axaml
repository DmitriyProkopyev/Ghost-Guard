<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
        x:Class="Ghost_Guard.Views.Input.PasswordInputPanel"
        SizeToContent="WidthAndHeight"
        MaxHeight="200"
        MaxWidth="400"
        MinHeight="150"
        MinWidth="300"
        Title="Password Input Panel">
    
        <Grid RowDefinitions="*, 2*">
                <TextBox Grid.Row="0" PasswordChar="*" Watermark="Введите мастер пароль" Name="Input"/>
                <Button Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="OnButtonPressed">Готово</Button>
        </Grid>
</Window>
